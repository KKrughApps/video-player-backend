# Server Configuration
PORT=10000
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgres://doadmin:YOUR_DB_PASSWORD@your-db-host.ondigitalocean.com:25060/animations_db?sslmode=verify-ca
DB_HOST=your-db-host.ondigitalocean.com
DB_PORT=25060
DB_USER=doadmin
DB_PASSWORD=YOUR_DB_PASSWORD
DB_NAME=animations_db
DB_SSL=true
DB_SSL_CERT=

# Redis Configuration
REDIS_HOST=your-redis-host.ondigitalocean.com
REDIS_PORT=25061
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_USERNAME=default
REDIS_TLS=true

# Storage Configuration
STORAGE_TYPE=spaces
STORAGE_BASE_URL=https://your-space-name.nyc3.digitaloceanspaces.com

# DigitalOcean Spaces Configuration
SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
SPACES_REGION=nyc3
SPACES_KEY=YOUR_SPACES_KEY
SPACES_SECRET=YOUR_SPACES_SECRET
SPACES_BUCKET=your-space-name

# Local Storage Configuration (not used in production)
LOCAL_STORAGE_PATH=./storage

# API Keys
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY
ELEVENLABS_API_KEY=YOUR_ELEVENLABS_API_KEY

# Processing Configuration
CONCURRENT_JOBS=2
MAX_RETRY_ATTEMPTS=3
JOB_TIMEOUT=300000  # 5 minutes

# Video Configuration
MAX_VIDEO_SIZE=104857600  # 100MB
ALLOWED_VIDEO_TYPES=video/mp4,video/quicktime

# Security Configuration
SESSION_SECRET=YOUR_SESSION_SECRET
CORS_ORIGINS=https://your-app-name.ondigitalocean.app,http://localhost:3000