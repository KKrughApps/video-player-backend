{
  "name": "video-narration-service",
  "version": "1.0.0",
  "description": "Service for adding narration to silent videos in multiple languages",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "migration:create": "knex migrate:make",
    "migration:latest": "knex migrate:latest",
    "migration:rollback": "knex migrate:rollback",
    "seed:run": "knex seed:run",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/video-narration-service.git"
  },
  "keywords": [
    "video",
    "narration",
    "text-to-speech",
    "multilingual"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@fastify/multipart": "^7.0.0",
    "@fastify/static": "^6.0.0",
    "aws-sdk": "^2.1048.0",
    "bull": "^4.8.0",
    "dotenv": "^16.0.1",
    "fastify": "^4.0.0",
    "ffmpeg-static": "^5.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "ioredis": "^5.0.0",
    "knex": "^2.0.0",
    "node-fetch": "^2.6.7",
    "pg": "^8.7.1",
    "pino": "^8.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/fluent-ffmpeg": "^2.1.20",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@types/node-fetch": "^2.6.4",
    "@types/pg": "^8.6.6",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.0.0",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.0"
  }
}